.row
	=simple_form_for @item do |f|
		- if @item.errors.any?
			#errors
				%p
					= @item.errors.count
					prevented this item from saving
				%ul
					- @item.errors.full_messages.each do |msg|
						%li=msg
		.panel-body
			= f.input :name, input_html: { class: 'form-control'}
			= f.input :unit_type, collection: Item.unit_types, include_blank: false,  input_html: { class: 'form-control'}
			= f.input :unit, collection: Item.unit_options, include_blank: false,  input_html: { class: 'form-control'}
			= f.input :price_per_unit, input_html: { class: 'form-control'}
		= f.button :submit, class: "btn btn-primary"
